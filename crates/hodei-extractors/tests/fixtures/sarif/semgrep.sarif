{
  "version": "2.1.0",
  "$schema": "https://json.schemastore.org/sarif-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "Semgrep",
          "version": "1.45.0",
          "informationUri": "https://semgrep.dev",
          "rules": [
            {
              "id": "detect-sql-injection",
              "name": "SQL Injection",
              "shortDescription": {
                "text": "Possible SQL injection vulnerability"
              },
              "fullDescription": {
                "text": "User input is concatenated directly into a SQL query"
              }
            },
            {
              "id": "detect-xss",
              "name": "Cross-site Scripting (XSS)",
              "shortDescription": {
                "text": "Potential XSS vulnerability"
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "detect-sql-injection",
          "ruleIndex": 0,
          "level": "error",
          "message": {
            "text": "Detected SQL query that is vulnerable to injection because user input is concatenated directly into the query."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "app.py",
                  "uriBaseId": "%SRCROOT%"
                },
                "region": {
                  "startLine": 23,
                  "startColumn": 15,
                  "endLine": 23,
                  "endColumn": 45
                }
              }
            }
          ],
          "properties": {
            "security-severity": 9.8,
            "cwe": ["CWE-89"],
            "owasp": "A03:2021",
            "tags": ["security", "cwe", "owasp-top-2021"]
          }
        },
        {
          "ruleId": "detect-xss",
          "ruleIndex": 1,
          "level": "warning",
          "message": {
            "text": "Detected unescaped user input rendered to HTML, which can lead to XSS."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "templates/profile.html",
                  "uriBaseId": "%SRCROOT%"
                },
                "region": {
                  "startLine": 15,
                  "startColumn": 32,
                  "endLine": 15,
                  "endColumn": 44
                }
              }
            }
          ],
          "properties": {
            "security-severity": 6.1,
            "cwe": ["CWE-79"],
            "owasp": "A03:2021",
            "tags": ["security", "cwe", "owasp-top-2021"]
          }
        }
      ]
    }
  ]
}
