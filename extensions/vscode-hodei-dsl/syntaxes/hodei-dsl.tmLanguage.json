{
  "scopeName": "source.hodei-dsl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#rule_declaration"
    },
    {
      "include": "#fact_types"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.hodei-dsl"
            }
          },
          "end": "$",
          "name": "comment.line.double-slash.hodei-dsl"
        },
        {
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.hodei-dsl"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.hodei-dsl"
            }
          },
          "name": "comment.block.hodei-dsl"
        }
      ]
    },
    "rule_declaration": {
      "patterns": [
        {
          "begin": "\\b(rule)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.rule.hodei-dsl"
            },
            "2": {
              "name": "entity.name.function.rule.hodei-dsl"
            }
          },
          "end": "\\}",
          "name": "meta.rule.declaration.hodei-dsl",
          "patterns": [
            {
              "include": "#keywords"
            },
            {
              "include": "#fact_types"
            }
          ]
        }
      ]
    },
    "fact_types": {
      "patterns": [
        {
          "begin": "\\b(Vulnerability|CodeSmell|SecurityIssue)\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "support.type.hodei-dsl"
            }
          },
          "end": "\\}",
          "name": "meta.fact.type.hodei-dsl",
          "patterns": [
            {
              "include": "#strings"
            },
            {
              "include": "#keywords"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(when|then|emit|function|if|else|return|true|false|null)\\b",
          "name": "keyword.control.hodei-dsl"
        },
        {
          "match": "\\b(matches|contains|length_gt|length_lt|equals)\\s*\\(",
          "name": "support.function.hodei-dsl"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.hodei-dsl"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.hodei-dsl"
            }
          },
          "name": "string.quoted.double.hodei-dsl",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.hodei-dsl"
            }
          ]
        }
      ]
    }
  },
  "name": "hodei-scan DSL",
  "fileTypes": ["hodei"]
}
